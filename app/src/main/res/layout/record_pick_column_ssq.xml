<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/redText"
            android:background="@drawable/xh_shuwei"
            style="@style/pick_column_style"
            android:layout_marginLeft="10dp"
            android:text="红球"/>

        <com.shrinktool.view.NumberGroupView
            android:id="@+id/pick_column_NumberGroupView_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:checkedDrawable="@drawable/bg_special_complete_circle_choose_red_ball"
            app:itemSize="36dp"
            app:verticalGap="8dp"
            app:textSize="16sp"
            app:checkedTextColor="@color/white"
            app:uncheckedDrawable="@drawable/bg_special_complete_circle_defalut_ball"
            app:numberStyle="false"
            app:chooseMode="false"
            app:minNumber="1"
            app:maxNumber="33"
            app:column="7" />
    </LinearLayout>
    <View style="@style/divideLine"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/blueText"
            android:background="@drawable/xh_shuwei"
            style="@style/pick_column_style"
            android:layout_marginLeft="10dp"
            android:text="蓝球"/>
        <com.shrinktool.view.NumberGroupView
            android:id="@+id/pick_column_NumberGroupView_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:textColor="#4ab5eb"
            app:checkedDrawable="@drawable/bg_special_complete_circle_choose_blue_ball"
            app:itemSize="36dp"
            app:verticalGap="8dp"
            app:checkedTextColor="@color/white"
            app:textSize="16sp"
            app:uncheckedDrawable="@drawable/bg_special_complete_circle_defalut_ball"
            app:numberStyle="false"
            app:chooseMode="false"
            app:minNumber="1"
            app:maxNumber="16"
            app:column="7" />
    </LinearLayout>
</LinearLayout>