<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/home_item_passed_bg"
              android:layout_height="80dp">
    <ImageView
        android:id="@+id/lottery_ico"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/cz_icon_xjssc"/>

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="重庆时时彩"/>
        <TextView
            android:id="@+id/issue"
            android:layout_toRightOf="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray3"
            android:text="第16033期"/>

        <TextView
            android:id="@+id/time"
            android:visibility="invisible"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="2016-04-12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ball_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="4">
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="01"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="02"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="03"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="04"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="05"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="06"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:background="@drawable/bg_special_complete_circle_choose_blue_ball"
                    android:text="07"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/home_kj_more"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>