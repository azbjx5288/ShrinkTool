<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">
    <RelativeLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="48dp"
        android:alpha="0"
        android:background="@color/app_main">
        <ImageButton
            android:id="@android:id/home"
            android:src="@drawable/backbtn"
            android:background="@drawable/image_button_bg"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/action_bar_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <!--<include layout="@layout/actionbar_menu_image"/>
            <include layout="@layout/actionbar_menu_text"/>-->
            <ImageView
                android:id="@+id/titleBarCollect"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="@drawable/image_button_bg"
                android:src="@drawable/nav_sc"/>
            <ImageView
                android:id="@+id/titleBarLike"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="@drawable/image_button_bg"
                android:src="@drawable/nav_dz"/>
            <ImageView
                android:id="@+id/titleBarShare"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="@drawable/image_button_bg"
                android:src="@drawable/nav_fx"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <LinearLayout
        android:id="@+id/contentOriginal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333333"
            android:text="标题"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/time"
                android:layout_marginLeft="14dp"
                android:text="2016/12/12"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_marginRight="10dp"
                android:textColor="#999999"
                android:drawableLeft="@drawable/wode_llls_hc_sc"
                android:text="收藏"/>
            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_marginRight="10dp"
                android:textColor="#999999"
                android:drawableLeft="@drawable/wode_llls_hc_dz"
                android:text="250"/>
            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_marginRight="10dp"
                android:textColor="#999999"
                android:drawableLeft="@drawable/wode_llls_hc_fx"
                android:text="分享"/>
        </LinearLayout>

        <View style="@style/divideLine"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#595959"
            android:text="内容"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentReplace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333333"
            android:text="标题"/>
        <TextView
            android:id="@+id/time2"
            android:layout_marginLeft="14dp"
            android:text="2016/12/12"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"/>
        <View style="@style/divideLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <ScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#595959"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="内容"/>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wode_llls_hc_chdb"/>
</LinearLayout>