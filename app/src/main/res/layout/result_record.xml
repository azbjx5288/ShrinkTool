<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/resultContent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lotteryIco"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cz_icon_xjssc"/>
            <TextView
                android:id="@+id/lotteryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#323232"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="重庆时时彩"/>
            <TextView
                android:id="@+id/lotteryIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#979797"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:text="第20161216-052期  三星直选"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:src="@drawable/faxq_title_curve"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#656565"
                    android:text="开奖号码"/>
                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textRed"
                    android:text="未开奖"/>
            </LinearLayout>
            <View style="@style/divideLine"/>
            <LinearLayout
                android:id="@+id/openCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="01"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="02"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="03"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="04"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="05"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:text="06"/>
                <TextView
                    style="@style/lottery_list_item_ball"
                    android:background="@drawable/bg_special_complete_circle_choose_blue_ball"
                    android:text="07"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/notOpenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#b4b4b4"
                    android:drawableLeft="@drawable/faxq_ddkj"
                    android:text="请静候开奖"/>
            </LinearLayout>
            <View style="@style/divideLine"
                  android:layout_height="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#656565"
                android:text="过滤设置"/>
            <View style="@style/divideLine"/>

            <LinearLayout
                android:id="@+id/pickRuleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
            </LinearLayout>

            <View style="@style/divideLine"
                  android:layout_height="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#656565"
                android:text="原始方案"/>
            <View style="@style/divideLine"/>
            <LinearLayout
                android:id="@+id/pickOriginalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <View style="@style/divideLine"
                  android:layout_height="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#656565"
                android:text="过滤结果"/>
            <View style="@style/divideLine"/>

            <LinearLayout
                android:id="@+id/fiferLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/filterTotal"
                                android:text="125注"
                                style="@style/result_red_text"/>
                            <TextView
                                android:text="过滤前"
                                style="@style/result_gray_text"/>
                        </LinearLayout>
                        <View android:layout_width="1dp"
                              android:layout_height="42dp"
                              android:background="#ececec"
                              android:layout_gravity="center_vertical"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="76dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/filterCount"
                                style="@style/result_red_text"
                                android:text="12注"/>
                            <TextView
                                style="@style/result_gray_text"
                                android:text="过滤后"/>
                        </LinearLayout>
                        <View android:layout_width="1dp"
                              android:layout_height="42dp"
                              android:background="#ececec"
                              android:layout_gravity="center_vertical"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="76dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/filterRatio"
                                style="@style/result_red_text"
                                android:text="9%"/>
                            <TextView
                                style="@style/result_gray_text"
                                android:text="压缩比"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/divideLine"/>
                <LinearLayout
                    android:id="@+id/pickNumberLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pickNumberMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="@drawable/image_button_bg"
                        android:text="查看更多号码"/>
                    <View style="@style/divideLine"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/pickCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:text="共250注500元"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:textColor="#979797"
                android:text="开奖时间：2016-12-11 19:20"/>
            <View style="@style/divideLine"
                  android:layout_height="8dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/divideLine"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/resultCopy"
                style="@style/textViewButton"
                android:layout_height="match_parent"
                android:drawablePadding="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="复制"
                android:drawableLeft="@drawable/result_copy_button_image"/>
            <TextView
                android:id="@+id/resultSaveOut"
                style="@style/textViewButton"
                android:layout_height="match_parent"
                android:drawablePadding="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="导出"
                android:drawableLeft="@drawable/result_save_button_image"/>

            <TextView
                android:id="@+id/go2game"
                android:layout_height="match_parent"
                style="@style/textViewButton"
                android:text="去选号" />

            <TextView
                android:id="@+id/replay"
                android:layout_height="match_parent"
                style="@style/textViewButton"
                android:background="@drawable/button_2"
                android:textColor="#ef555f"
                android:text="复盘"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wode_llls_hc_chdb"/>
    </LinearLayout>

</LinearLayout>