<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="76dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/filterTotal"
                android:text="---注"
                style="@style/result_red_text"/>
            <TextView
                android:text="过滤前"
                style="@style/result_gray_text"/>
        </LinearLayout>
        <View android:layout_width="1dp"
              android:layout_height="42dp"
              android:background="#ececec"
              android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="76dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/count"
                style="@style/result_red_text"
                android:text="---注"/>
            <TextView
                style="@style/result_gray_text"
                android:text="过滤后"/>
        </LinearLayout>
        <View android:layout_width="1dp"
              android:layout_height="42dp"
              android:background="#ececec"
              android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="76dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ratio"
                style="@style/result_red_text"
                android:text="-%"/>
            <TextView
                style="@style/result_gray_text"
                android:text="压缩比"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/faxq_title_curve"/>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <View style="@style/divideLine"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/resultPickAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全选"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/yc_gljg_check_box_normal"/>
        <Button
            android:id="@+id/resultCopy"
            android:stateListAnimator="@null"
            android:layout_toLeftOf="@+id/resultSaveOut"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_3"
            android:layout_margin="4dp"
            android:drawablePadding="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#979797"
            android:text="复制"
            android:drawableLeft="@drawable/result_copy_button_image"/>
        <TextView
            android:id="@+id/resultSaveOut"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_3"
            android:layout_margin="4dp"
            android:drawablePadding="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#979797"
            android:text="导出"
            android:drawableLeft="@drawable/result_save_button_image"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/buttonBarBg">
        <TextView
            android:id="@+id/pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="共--注--元"/>
        <Button
            android:id="@+id/resultSave2Server"
            android:stateListAnimator="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_button_bg"
            android:textColor="@android:color/white"
            android:text="保存" />
    </RelativeLayout>
</LinearLayout>
