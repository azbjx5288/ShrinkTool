<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_button_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/filterNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#787878"
            android:text="方案编号：22222"/>
        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textColor="@color/textRed"
            android:text="等待开奖"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#f3f3f3">
        <ImageView
            android:id="@+id/lotteryIco"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cz_icon_xjssc"/>
        <TextView
            android:id="@+id/lotteryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/lotteryIco"
            android:textSize="16sp"
            android:text="重庆时时彩"/>
        <TextView
            android:id="@+id/issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lotteryName"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/lotteryIco"
            android:textColor="#979797"
            android:text="第---期"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#979797"
            android:layout_marginTop="17dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="共250注500元"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:textColor="#979797"
        android:gravity="right|center_vertical"
        android:text="开奖时间：2016-12-11 19:20"/>
    <View style="@style/divideLine"/>

    <TextView
        android:id="@+id/go2game"
        style="@style/textViewButton"
        android:layout_gravity="right"
        android:text="去选号"/>
    <View style="@style/divideLine"
        android:layout_height="7dp"/>
</LinearLayout>